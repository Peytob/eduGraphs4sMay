<Window x:Class="Graphs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphs"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="0.2*" />
        </Grid.RowDefinitions>

        <UserControl
            x:Name="GraphUserControl"
            Grid.Row="0" />

        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.8*" />
                <ColumnDefinition Width="0.2*" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="1"
                x:Name="AcceptButton"
                Content="Генерация графа"
                FontSize="16"
                Click="AcceptButton_Click" />

            <Grid
                Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Радиус вершин -->
                <Grid
                    Grid.Column="0"
                    Grid.Row="0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Label
                        Grid.Row="0"
                        Content="Радиус вершин ↓ (px)"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="14" />

                    <TextBox
                        x:Name="DeltaTextBox"
                        Grid.Row="1"
                        FontSize="14"
                        TextAlignment="Center"
                        VerticalContentAlignment="Center"
                        PreviewTextInput="OnlyNumbersFilter" />
                </Grid>

                <!-- Тип фигуры - поля для точек -->
                <Grid
                    Grid.Column="0"
                    Grid.Row="1">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Label
                        Grid.Row="0"
                        Content="Фигура для заполнения"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="14" />

                    <ComboBox
                        x:Name="FieldTypeComboBox"
                        Grid.Row="1"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center" SelectionChanged="FieldTypeComboBox_SelectionChanged">
                        <TextBlock
                            FontSize="14"
                            Text="Квадрат" />
                        <TextBlock
                            FontSize="14"
                            Text="Круг" />
                        <TextBlock
                            FontSize="14"
                            Text="Треугольник" />
                    </ComboBox>
                </Grid>

                <!-- Количество преград -->
                <Grid
                    Grid.Column="1"
                    Grid.Row="0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Label
                        Grid.Row="0"
                        Content="Количество преград"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="14" />

                    <TextBox
                        x:Name="GarbageTextBox"
                        Grid.Row="1"
                        FontSize="14"
                        TextAlignment="Center"
                        VerticalContentAlignment="Center"
                        PreviewTextInput="OnlyNumbersFilter" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
